# NOTE: This file is kept for legacy compatibility but is no longer used.
# Ruff has replaced Flake8 in our pre-commit configuration.
# See ruff.toml for the current linting configuration.

[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .mypy_cache
ignore =
    # Allow lambda expressions
    E731,
    # Allow line break before binary operator
    W503,
    # Allow line break after binary operator
    W504,
    # Ignore missing docstrings (handled by pydocstyle separately)
    D100,D101,D102,D103,D104,D105,D106,D107,
    # Ignore some bugbear opinions
    B008,  # Do not perform function calls in argument defaults
    # Ignore some simplify suggestions that may reduce readability
    SIM105,  # Use contextlib.suppress
    SIM108   # Use ternary operator
per-file-ignores =
    # Allow unused imports in __init__.py files
    __init__.py:F401
    # Allow long lines in tests
    tests/*.py:E501
